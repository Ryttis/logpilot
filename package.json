{
  "name": "logpilot",
  "version": "1.0.0",
  "description": "Lightweight Node.js + MySQL prompt-result store",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node --env-file .env src/server.js",
    "dev": "nodemon --env-file .env src/server.js",
    "worker": "node --env-file .env src/workers/Scheduler.js",
    "migrate": "node --env-file .env ./node_modules/.bin/sequelize-cli db:migrate --migrations-path db/migrations",
    "reset": "node --env-file .env ./node_modules/.bin/sequelize-cli db:migrate:undo:all --migrations-path db/migrations && node --env-file .env ./node_modules/.bin/sequelize-cli db:migrate --migrations-path db/migrations",
    "up": "concurrently -n API,WORKER -c cyan,green \"npm run dev\" \"npm run worker\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.2",
    "node-cron": "^4.2.1",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.4",
    "sequelize-cli": "^6.6.3"
  }
}
